<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title_text"
        style="@style/PopupTitleStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/post" />

    <ufes.grad.mobile.communitylink.ui.components.FormsLayout
        android:id="@+id/content_forms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:forms_box_size="100dp"
        app:forms_title_color="@color/white"
        app:forms_title_text="@string/content" />

    <TextView
        android:id="@+id/content_text"
        style="@style/PopupTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/placeholder"
        android:textAlignment="textStart" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/mask_rounded_rectangle"
        android:cropToPadding="true"
        android:src="@drawable/project_profile" />

    <Button
        android:id="@+id/image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/style_button"
        android:backgroundTint="@color/white"
        android:text="@string/load_photo"
        android:textColor="@color/purple"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/date_text"
        style="@style/PopupTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="XX/XX/XXXX Ã s XX:XX"
        android:textAlignment="textStart" />

</LinearLayout>

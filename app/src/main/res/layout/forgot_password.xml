<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:orientation="vertical"
    tools:context=".view.SignupActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background"
        app:layout_constraintBottom_toBottomOf="@id/main"
        app:layout_constraintLeft_toLeftOf="@id/main"
        app:layout_constraintRight_toRightOf="@id/main"
        app:layout_constraintTop_toTopOf="@id/main" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:padding="40dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toTopOf="@+id/main"
        app:layout_constraintLeft_toLeftOf="@id/main"
        app:layout_constraintRight_toRightOf="@id/main"
        app:layout_constraintTop_toTopOf="@id/main">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ufes.grad.mobile.communitylink.components.CommunityLinkTitle
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/text"
                app:layout_constraintLeft_toLeftOf="@id/content"
                app:layout_constraintRight_toRightOf="@id/content"
                app:layout_constraintTop_toTopOf="@id/content" />

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:text="@string/redefine_password_text_1"
                app:layout_constraintBottom_toTopOf="@id/email"
                app:layout_constraintLeft_toLeftOf="@id/content"
                app:layout_constraintRight_toRightOf="@id/content"
                app:layout_constraintTop_toBottomOf="@id/title" />

            <ufes.grad.mobile.communitylink.components.FormsLayout
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@id/email_button"
                app:layout_constraintLeft_toLeftOf="@id/content"
                app:layout_constraintRight_toRightOf="@id/content"
                app:layout_constraintTop_toBottomOf="@id/text"
                app:texts="@string/email" />

            <Button
                android:id="@+id/email_button"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="40dp"
                android:background="@drawable/button_layout"
                android:backgroundTint="@color/black"
                android:text="@string/send_email"
                android:textColor="@color/white"
                app:layout_constraintBottom_toTopOf="@+id/separator"
                app:layout_constraintLeft_toLeftOf="@id/content"
                app:layout_constraintRight_toRightOf="@id/content"
                app:layout_constraintTop_toBottomOf="@id/email" />

            <View
                android:id="@+id/separator"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginHorizontal="60dp"
                android:layout_marginVertical="20dp"
                android:background="@color/black"
                app:layout_constraintBottom_toTopOf="@id/code_text"
                app:layout_constraintLeft_toLeftOf="@id/content"
                app:layout_constraintRight_toRightOf="@id/content"
                app:layout_constraintTop_toBottomOf="@id/email_button" />

            <TextView
                android:id="@+id/code_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:text="@string/redefine_password_text_2"
                app:layout_constraintBottom_toTopOf="@id/code"
                app:layout_constraintLeft_toLeftOf="@id/content"
                app:layout_constraintRight_toRightOf="@id/content"
                app:layout_constraintTop_toBottomOf="@id/separator" />

            <ufes.grad.mobile.communitylink.components.FormsLayout
                android:id="@+id/code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@id/code_button"
                app:layout_constraintLeft_toLeftOf="@id/content"
                app:layout_constraintRight_toRightOf="@id/content"
                app:layout_constraintTop_toBottomOf="@id/code_text"
                app:texts="@string/code" />

            <Button
                android:id="@+id/code_button"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="40dp"
                android:background="@drawable/button_layout"
                android:backgroundTint="@color/blue"
                android:text="@string/check_code"
                android:textColor="@color/white"
                app:layout_constraintBottom_toTopOf="@id/separator_2"
                app:layout_constraintLeft_toLeftOf="@id/content"
                app:layout_constraintRight_toRightOf="@id/content"
                app:layout_constraintTop_toBottomOf="@id/code" />

            <View
                android:id="@+id/separator_2"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginHorizontal="60dp"
                android:layout_marginVertical="20dp"
                android:background="@color/black"
                app:layout_constraintBottom_toTopOf="@id/password_text"
                app:layout_constraintLeft_toLeftOf="@id/content"
                app:layout_constraintRight_toRightOf="@id/content"
                app:layout_constraintTop_toBottomOf="@id/code_button" />

            <TextView
                android:id="@+id/password_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:text="@string/redefine_password_text_3"
                app:layout_constraintBottom_toTopOf="@id/password"
                app:layout_constraintLeft_toLeftOf="@id/content"
                app:layout_constraintRight_toRightOf="@id/content"
                app:layout_constraintTop_toBottomOf="@id/separator_2" />

            <ufes.grad.mobile.communitylink.components.FormsLayout
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@id/confirm_password"
                app:layout_constraintLeft_toLeftOf="@id/content"
                app:layout_constraintRight_toRightOf="@id/content"
                app:layout_constraintTop_toBottomOf="@id/password_text"
                app:texts="@string/new_password" />

            <ufes.grad.mobile.communitylink.components.FormsLayout
                android:id="@+id/confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@id/password_button"
                app:layout_constraintLeft_toLeftOf="@id/content"
                app:layout_constraintRight_toRightOf="@id/content"
                app:layout_constraintTop_toBottomOf="@id/password_text"
                app:texts="@string/confirm_password" />

            <Button
                android:id="@+id/password_button"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="40dp"
                android:background="@drawable/button_layout"
                android:backgroundTint="@color/black"
                android:text="@string/redefine_password"
                android:textColor="@color/white"
                app:layout_constraintLeft_toLeftOf="@id/content"
                app:layout_constraintRight_toRightOf="@id/content"
                app:layout_constraintTop_toBottomOf="@id/confirm_password" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
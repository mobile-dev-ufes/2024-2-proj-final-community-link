<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:padding="@dimen/border"
    tools:context=".view.EventVolunteerSlotsFragment">

    <Spinner
        android:id="@+id/address_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/style_edit_text"
        android:backgroundTint="@color/white"
        android:spinnerMode="dropdown"
        tools:listitem="@layout/layout_spinner" />

    <Spinner
        android:id="@+id/date_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/style_edit_text"
        android:backgroundTint="@color/white"
        android:spinnerMode="dropdown"
        tools:listitem="@layout/layout_spinner" />

    <ufes.grad.mobile.communitylink.components.SeparatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ufes.grad.mobile.communitylink.components.InfoCardLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:description_text="@string/placeholder"
                app:tag_type="FILLED"
                app:title_text="@string/placeholder" />

            <ufes.grad.mobile.communitylink.components.InfoCardLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:description_text="@string/placeholder"
                app:tag_type="EMPTY"
                app:title_text="@string/placeholder" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
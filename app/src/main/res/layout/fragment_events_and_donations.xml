<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:padding="@dimen/border"
    tools:context=".view.EventsAndDonationsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ufes.grad.mobile.communitylink.components.InfoCardLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:description_text="@string/placeholder"
            app:second_description_text="@string/placeholder"
            app:second_title_text="@string/placeholder"
            app:tag_type="EVENT"
            app:title_text="@string/placeholder" />

        <ufes.grad.mobile.communitylink.components.InfoCardLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:second_description_text="@string/placeholder"
            app:second_title_text="@string/placeholder"
            app:tag_type="DONATION"
            app:title_text="@string/placeholder" />

        <ufes.grad.mobile.communitylink.components.InfoCardLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:description_text="@string/placeholder"
            app:second_description_text="@string/placeholder"
            app:second_title_text="@string/placeholder"
            app:tag_type="DONATION"
            app:title_text="@string/placeholder" />

    </LinearLayout>

</ScrollView>
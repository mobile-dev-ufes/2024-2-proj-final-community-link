<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:padding="@dimen/border"
    android:scrollbars="none"
    tools:context=".view.EditProjectFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/mask_circle"
                android:clipToOutline="true"
                android:src="@drawable/project_profile" />

            <ufes.grad.mobile.communitylink.components.FormsLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:forms_title_text="@string/name" />

        </LinearLayout>

        <ufes.grad.mobile.communitylink.components.FormsLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:forms_title_text="@string/description" />

        <ufes.grad.mobile.communitylink.components.FormsLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:forms_hint_text="@string/tags"
            app:forms_title_text="@string/tags_parenthesis" />

        <ufes.grad.mobile.communitylink.components.FormsLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:forms_hint_text="@string/cnpj_hint"
            app:forms_title_text="@string/cnpj" />

        <ufes.grad.mobile.communitylink.components.FormsLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:forms_title_text="@string/pix_key" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:drawableStart="@drawable/ic_alert"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="@string/unrefreshed_project_text" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/style_button"
            android:backgroundTint="@color/black"
            android:text="@string/request_revision"
            android:textColor="@color/white" />

        <ufes.grad.mobile.communitylink.components.SeparatorLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ufes.grad.mobile.communitylink.components.IconButtonLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:button_icon="@drawable/ic_profile"
            app:button_text="Gerenciar Membros" />

        <ufes.grad.mobile.communitylink.components.IconButtonLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:button_icon="@drawable/ic_archive"
            app:button_text="Gerenciar Doações Diretas" />

        <ufes.grad.mobile.communitylink.components.IconButtonLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:button_icon="@drawable/ic_zap"
            app:button_text="Gerenciar Ações" />

        <ufes.grad.mobile.communitylink.components.SeparatorLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/style_button"
            android:backgroundTint="@color/red"
            android:text="@string/deactivate_project"
            android:textColor="@color/white" />

        <ufes.grad.mobile.communitylink.components.SeparatorLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:drawableStart="@drawable/ic_alert"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="@string/delete_project_text" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/style_button"
            android:backgroundTint="@color/red"
            android:text="@string/delete_project"
            android:textColor="@color/white" />

    </LinearLayout>

</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:padding="@dimen/border"
    tools:context=".view.ProjectDonationListFragment">

    <ufes.grad.mobile.communitylink.components.SearchBarLayout
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingBottom="10dp">

        <CheckBox
            android:id="@+id/received"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Recebidas" />

        <CheckBox
            android:id="@+id/pending"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pendentes" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ufes.grad.mobile.communitylink.components.DonationCardLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:donation_date="@string/placeholder"
                app:donation_name="@string/placeholder"
                app:donation_pending="false" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
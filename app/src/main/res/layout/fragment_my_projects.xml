<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/border"
    tools:context=".view.fragments.MyProjectsFragment">

    <Button
        android:id="@+id/create_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/style_button"
        android:backgroundTint="@color/green"
        android:drawableStart="@drawable/ic_plus"
        android:drawablePadding="10dp"
        android:text="@string/create_new_project" />

    <Spinner
        android:id="@+id/filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/style_edit_text"
        android:backgroundTint="@color/white"
        android:spinnerMode="dropdown"
        tools:listitem="@layout/layout_spinner" />

    <ufes.grad.mobile.communitylink.components.SeparatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ufes.grad.mobile.communitylink.components.CommonCardLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:card_image="@drawable/ic_explore"
                app:card_lower_text="@string/placeholder"
                app:card_upper_text="@string/placeholder" />

            <ufes.grad.mobile.communitylink.components.CommonCardLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:card_lower_text="@string/placeholder"
                app:card_upper_text="@string/placeholder" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
